{
    "openapi": "3.0.3",
    "info": {
      "version": "1.0.0",
      "title": "Ovo API"
    },
    "basePath": "/",
    "servers": [
      {
        "url": "http://localhost:3000",
        "description": "Local"
      },
      {
        "url": "https://ovoapi.herokuapp.com/",
        "description": "Production"
      }
    ],
    "paths": {
      "/user": {
        "post": {
          "tags": [
            "User"
          ],
          "summary": "Endpoint para criação de usuário",
          "requestBody": {
            "description": "Corpo da requisição",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                        "type": "string"
                    },
                    "deviceId": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Usuário criado com sucesso."
            },
            "400": {
              "description": "Requisição incompleta"
            },
            "50x": {
              "description": "Erro interno de servidor"
            }
          }
        }
      },
      "/user/deviceId/:deviceId": {
        "post": {
          "tags": [
            "User"
          ],
          "summary": "Endpoint para buscar usuário pelo device Id",
          "responses": {
            "201": {
              "description": "Usuário encontrado.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "deviceId": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Requisição incompleta"
            },
            "50x": {
              "description": "Erro interno de servidor"
            }
          }
        }
      },
      "/route": {
        "post": {
          "tags": [
            "Rotas"
          ],
          "summary": "Endpoint para criação de rotas",
          "requestBody": {
            "description": "Corpo da requisição",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                        "type": "string"
                    },
                    "userId": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Rota criada com sucesso."
            },
            "400": {
              "description": "Requisição incompleta"
            },
            "50x": {
              "description": "Erro interno de servidor"
            }
          }
        }
      }
    }
  }